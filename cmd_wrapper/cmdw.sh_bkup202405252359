#! /bin/bash

# Check for input arguments and set mode variable if --hoge format is found
mode=""
for arg in "$@"; do
  if [[ "$arg" =~ ^--(.+) ]]; then
    mode="${BASH_REMATCH[1]}"
  fi
done

if [[ "$mode" == "hoge" ]]; then
  echo "hoge"
elif [[ "$mode" == "hogo" ]]; then
  echo "hogo"
elif [[ -z "$mode" ]]; then
  echo "Error: No mode specified."
else
  echo "no match"
fi









